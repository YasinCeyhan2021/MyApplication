<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Düzenleme Butonu -->
        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:contentDescription="Edit"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"/>

        <!-- Başlangıç Tarihi -->
        <TextView
            android:id="@+id/txtBaslangicTarihi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Başlangıç Tarihi:"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/btnEdit"
            android:layout_marginEnd="8dp"/>

        <!-- Süre -->
        <TextView
            android:id="@+id/txtSure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tedavi Süresi:"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_below="@id/txtBaslangicTarihi"
            android:layout_alignStart="@id/txtBaslangicTarihi"
            android:layout_marginTop="8dp"/>

        <!-- Süre -->
        <TextView
            android:id="@+id/txtFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sıklık Süresi:"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_below="@id/txtSure"
            android:layout_alignStart="@id/txtBaslangicTarihi"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
