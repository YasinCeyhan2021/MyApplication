<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <!-- Saat -->
    <TextView
        android:id="@+id/txtSaat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_margin="6dp"/>

    <!-- Kart (arka planlı kısım) -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/bg_card"
        android:elevation="2dp"
        android:layout_margin="6dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_pill"
            android:contentDescription="İlaç" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtIlacAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İlaç Adı"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333"/>

            <TextView
                android:id="@+id/txtDoz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 al Hap"
                android:textSize="14sp"
                android:textColor="#777"/>

            <TextView
                android:id="@+id/txtUnutulan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unutulan"
                android:textColor="#D32F2F"
                android:textSize="14sp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
